{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": "./", // ソースコードのベースディレクトリ
    "outDir": "./dist"  // コンパイルされたファイルの出力先
  },
  //"include": ["routes/api.ts"],  コンパイル対象のファイル
  "exclude": ["node_modules"], // コンパイルから除外するディレクトリ
  "ts-node": {
    "esm":true,
    "experimentalSpecifierResolution": "node"
  }
}
